---
import HeaderLink from "./HeaderLink.astro";
---

<header class="site-header">
  <nav aria-label="Primary">
    <ul class="unset site-nav">
      <li><HeaderLink href="/">Home</HeaderLink></li>
      <li><HeaderLink href="/posts">Posts</HeaderLink></li>
      <li><HeaderLink href="/projects">Projects</HeaderLink></li>
      <li><HeaderLink href="/about">About</HeaderLink></li>
    </ul>
  </nav>
</header>

<style>
  .site-header {
    border-bottom: 1px solid rgb(var(--color-border-muted));
    padding-bottom: 0.875rem;
    margin-bottom: 2rem;
  }

  .site-nav {
    display: flex;
    gap: 1.125rem;
    align-items: center;
    margin: 0;
  }

  .site-nav > li {
    padding-left: 0;
    margin: 0;
  }
</style>
